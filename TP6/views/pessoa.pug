extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal(style="display: inline-block;")
      h1(style="display: inline-block;")   Pessoa: #{p.id}
      img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="80" style="display: inline-block;")

    
    
    .w3-container
        ul.w3-ul.w3-card-4
            li #[b Nome:] #{p.nome}
            li #[b Idade:] #{p.idade}
            li #[b Sexo:] #{p.sexo}
            li #[b Morada:] #{p.morada.cidade} (#{p.morada.distrito})


            li #[b Profissão:] #{p.profissao}
            li #[b Partido Político:] #{p.partido_politico.party_name} (#{p.partido_politico.party_abbr})
            li #[b Religião:] #{p.religiao}
            li #[b Desporto(s):] #{p.desportos}
            li #[b Animais:] #{p.animais}
            li #[b Figura(s) Pública(s):] #{p.figura_publica_pt}
            li #[b Marca do Carro:] #{p.marca_carro}
            li #[b Destino(s) Favorito(s):] #{p.destinos_favoritos}



    footer.w3-container.w3-teal 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]



