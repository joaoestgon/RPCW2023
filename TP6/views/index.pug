extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Lista de Pessoas #[a.w3-btn.w3-round.w3-grey(href="/pessoas/registo") + ]
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Nome
          th Idade
          th Actions
        
        each p in plist
          tr
            td= p.id
            td
              a(href="/pessoas/"+p.id)= p.nome
            td= p.idade
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/pessoas/edit/"+p.id) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/pessoas/delete/"+p.id) Delete
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}
    